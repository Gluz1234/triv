<Page x:Class="Trivia_Client.SignupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SignupPage">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Username:" VerticalAlignment="Center" Width="120"/>
                <TextBox x:Name="NewUsernameTextBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Email:" VerticalAlignment="Center" Width="120"/>
                <TextBox x:Name="NewEmailTextBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Password:" VerticalAlignment="Center" Width="120"/>
                <PasswordBox x:Name="NewPasswordBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Confirm Password:" VerticalAlignment="Center" Width="120"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Width="200"/>
            </StackPanel>
            <Button Content="Signup" Width="100" Margin="5" Click="SignupButton_Click"/>
            <Button Content="Back to Login" Width="100" Margin="5" Click="BackToLoginButton_Click"/>
        </StackPanel>
    </Grid>
</Page>