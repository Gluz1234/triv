<Page x:Class="Trivia_Client.JoinRoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="JoinRoomPage">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Active Rooms:" Margin="5"/>
            <ListBox x:Name="ActiveRoomsListBox" Width="200" Height="100" Margin="5"/>
            <Button Content="Join Room" Width="200" Margin="5" Click="JoinRoomButton_Click"/>
            <Button Content="Go Back" Width="200" Margin="5" Click="GoBackButton_Click"/>
            <TextBlock x:Name="AdminTextBlock" FontSize="14" FontWeight="Bold" Margin="5"/>
            <TextBlock x:Name="PlayersTextBlock" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>