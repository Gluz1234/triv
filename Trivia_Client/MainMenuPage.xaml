<Page x:Class="Trivia_Client.MainMenuPage"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MainMenuPage">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="UsernameTextBlock" FontSize="16" FontWeight="Bold" Margin="5"/>
            <Button Content="Create Room" Width="200" Margin="5" Click="CreateRoomButton_Click"/>
            <Button Content="Join Room" Width="200" Margin="5" Click="JoinRoomButton_Click"/>
            <Button Content="Statistics" Width="200" Margin="5" Click="StatisticsButton_Click"/>
            <Button Content="Exit" Width="200" Margin="5" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Page>